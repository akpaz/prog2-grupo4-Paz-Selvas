<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>

	
	<!-- Banner -->
	<div class="banner">
		<img src="images/banner-entreAmigos.png" alt="Banner de mascotas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= productos[i].id %>">
						<figure class="product-box_image">
							<img src="<%= productos[i].imagen %>" alt="imagen de <%= productos[i].nombre %>" class="imgMascota">
						</figure>
						<article class="product-box_data">
							<h2 class="nombresIndex"><%= productos[i].nombre %></h2>
							<p><%= productos[i].descripcion %></p>
							<p>Comentarios: <%= productos[i].comentarios.length %></p>
						</article>
					</a>
				</section>
			</div>				
			<% } %>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= productos[i].id %>">
						<figure class="product-box_image">
							<img src="<%= productos[i].imagen %>" alt=" imagen de <%= productos[i].nombre %>">
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].nombre %></h2>
							<p><%= productos[i].descripcion %></p>
							<p>Comentarios: <%= productos[i].comentarios.length %></p>
						</article>
					</a>
				</section>
			</div>				
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	
</body>	
</html>