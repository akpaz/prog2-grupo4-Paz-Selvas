<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= usuario.fotoPerfil%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario.nombreUsuario %> 
						<a href="/profile/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= usuario.email %></li>
						<br>
						<li><%= usuario.productos.length %> productos</li>
						<li><%= usuario.comentarios.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < usuario.productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product-detail/<%= usuario.productos[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= usuario.productos[i].imagen %>" alt="imagen de <%= usuario.productos[i].nombre %>" class="imgMascota">
						</figure>
						<article class="product-box_data">
							<h2 class="nombresIndex"><%= usuario.productos[i].nombre %></h2>
							<p><%= usuario.productos[i].descripcion %></p>
							<p>Comentarios: <%= usuario.productos[i].comentarios.length %></p>
						</article>
					</a>
				</section>
			</div>				
			<% } %>
	<!-- /Mis productos -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	
</body>	
</html>