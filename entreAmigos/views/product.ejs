<!DOCTYPE html>
<html lang="es">
	
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%= producto.nombre %> </h2> 
			<p class="product-detail-description">
				<a href="/product-add/<%= producto.id %>">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= producto.imagen %>" alt="Imagen de <%= producto.nombre %>" class="product-detail-img">
					<p class="product-detail-description">
						<%= producto.descripcion %> </p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for (let i = 0; i < producto.comentarios.length; i++) { %>
							<article>
								<img src="/images/users/<%= producto.comentarios[i].fotoPerfil %>" alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="/profile"> <%= producto.comentarios[i].nombreUsuario %> </a> </strong>
								 	<%= producto.comentarios[i].texto %>
								</div>
							</article>						
						<% } %>
					</section>
					<form class="form" action="" method="get">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>

</body>	
</html>