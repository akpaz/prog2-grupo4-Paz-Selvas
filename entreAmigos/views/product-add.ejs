<!DOCTYPE html>
<html lang="es">
	
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Formulario para agregar producto -->
			<form action="/" method="post">
				<div class="divs-form">
					<label for="imgProducto" class="form-label">Ingrese una imagen del producto: </label>
					<input type="text" name="imgProducto" id="imgProducto" class="form-input">
				</div>
				<div class="divs-form">
					<label for="nombreProducto" class="form-label">Ingrese el nombre del producto: </label>
					<input type="text" name="nombreProducto" id="nombreProducto" class="form-input">
				</div>
				<div class="divs-form">
					<label for="descripcionProducto" class="form-label">Ingrese la descripción del producto: </label>
					<textarea name="descripcionProducto" id="descripcionProducto" cols="15" rows="5" class="form-input"></textarea>
				</div>
				<div class="divs-form">
					<label for="edadProducto" class="form-label">Ingrese la edad: </label>
					<input type="number" name="edadProducto" id="edadProducto" class="form-input">
				</div>
				<div class="divs-form">
					<label for="especiaProducto" class="form-label">Ingrese la especie: </label>
					<input type="text" name="especieProducto" id="especieProducto" class="form-input">
				</div>
				<div class="divs-form">
					<label for="sexoProducto" class="form-label">Ingrese el sexo: </label>
					<input type="text" name="sexoProducto" id="sexoProducto" class="form-input">
				</div>
				<div class="divs-form">
					<label for="personalidadProducto" class="form-label">Ingrese una descripción de la personalidad: </label>
					<input type="text" name="personalidadProducto" id="personalidadProducto" class="form-input">
				</div>
				<div>
					<button type="submit" class="button-form">Agregar producto</button>
				</div>
			</form>

	<!-- footer -->
	<%- include('./partials/footer') %>

</body>

</html>